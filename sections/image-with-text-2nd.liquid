{%- assign section_color = section.settings.color_scheme -%}
{%- include 'global-variables' -%}

{%- assign text_color_overlay = section.settings.section_color_overlay -%}
{%- assign content_position = section.settings.content_position -%}
{%- assign text_align = section.settings.text_align -%}
{%- assign hover_color = '' -%}
{%- assign hover_color_overlay = '' -%}

{%- if text_color != 'main' -%}
  {%- assign hover_color = 'main' -%}
{%- else -%}
  {%- assign hover_color = 'primary' -%}
{%- endif -%}

{%- if text_color_overlay != 'main' -%}
  {%- assign hover_color_overlay = 'main' -%}
{%- else -%}
  {%- assign hover_color_overlay = 'primary' -%}
{%- endif -%}

{%- assign heading = section.settings.heading -%}
{%- assign text = section.settings.text -%}
{%- assign cta_text = section.settings.cta_text -%}
{%- assign cta_url = section.settings.cta_url -%}

{%- if section.settings.feature_image -%}
  {%- assign feature_image = section.settings.feature_image -%}
  {%- assign feature_image_mobile = section.settings.feature_image_mobile -%}
{%- else -%}
  {%- assign placeholder = true -%}
{%- endif -%}

<section class="image-with-text content-type--hero {{ global__section_with_padding_class }} color--{{ text_color_overlay }}-text bg--{{ section_color }}-background" data-section-type="newsletter" data-section-id="{{ section.id }}">
  <div class="max-site-width px2 md--up--px3 lg--up--px3">
    <div class="image-with-text__container relative">
      <div class="image-with-text__image">
        {% if section.settings.feature_image  %}
        <div class="image-holder sm--hide">
          {% include 'responsive-image' with
            image: feature_image,
            max_width: 2000,
            max_height: 2000
          %}
        </div>
        {% else %}
          <div class="image-with-text__placeholder full {{ placeholder_bg }} p1 lg--up--p3">
              <div class="image-with-text__placeholder-svg">
                {{ 'lifestyle-1' | placeholder_svg_tag }}
              </div>
            </div>
        {% endif %}
        
        {% if section.settings.feature_image_mobile %}
        <div class="image-holder md--up--hide">
          {% include 'responsive-image' with
            image: feature_image_mobile,
          	max_width: 768,
          	max_height: 768
          %}
        </div>
        {% endif %}
        
      </div>
      <div class="image-with-text__content absolute full top--0 left--0 p1 md--up--p4 wd--p5 z1">
        {% assign content_position = content_position | split: ' ' %}
        <div class="table full">
          <div class="table-cell {{ content_position[0] }} {{ content_position[1] }}">
            <div class="inline-block {{ text_align }} lg--up--two-quarters">
              <div class="m0 one-whole">
                {% if heading != blank %}
                  <h2 class="{{ global__heading_font_size }} m0 mb2">{{ heading }}</h2>
                {% endif %}
                {% if text != blank %}
                  <div class="richtext {{ global__basic_font_size }} mt2">
                    {{ text }}
                  </div>
                {% endif %}

                {% if cta_url != blank %}
                  <a class="mt1 btn btn--content-type border--none px2 py1 bg--secondary-accent border--secondary-accent color--secondary-text--overlay hv-bg--secondary-accent hv--border--secondary-accent hv--secondary-accent--overlay inline-block" href="{{ cta_url }}" target="_blank" >
                    {{ cta_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text 2nd",
  "settings": [
    {
      "type": "image_picker",
      "id": "feature_image",
      "label": "Image"
    },
	{
      "type": "image_picker",
      "id": "feature_image_mobile",
